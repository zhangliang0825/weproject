.feedback>.label {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-align: center;
    align-items: center;
}

.category-list {
    background-color: #fff;
    min-height: 100%;
    padding: 180rpx 32rpx 32rpx;
}

.category-list>.title {
    font-size: 32rpx;
    font-weight: 700;
    color: #464750;
}

.fixed-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding: 32rpx;
    background-color: #fff;
    z-index: 100;
    box-sizing: border-box;
}

.search-result>.title {
    font-size: 28rpx;
    color: #464750;
}

.search-result>.title>.count {
    color: #a5875e;
    margin: 0 4rpx;
}

.categories,.categories>.category {
    display: -ms-flexbox;
    display: flex;
}

.categories {
    margin: 32rpx 0 64rpx;
    flex-flow: row wrap;
}

.categories>.category {
    -ms-flex-pack: center;
    justify-content: center;
    -ms-flex-align: center;
    align-items: center;
    flex-direction: column;
    height: 116rpx;
    background-color: #f1f2f4;
    flex: 0 0 31%;
    box-sizing: border-box;
    border-radius: 8rpx;
    margin-right: 3.5%;
    margin-bottom: 24rpx;
    position: relative;
    overflow: hidden;
}

.categories>.category:nth-child(3n) {
    margin-right: 0;
}

.categories>.category:nth-last-child(1),.categories>.category:nth-last-child(2),.categories>.category:nth-last-child(3) {
    margin-bottom: 0;
}

.categories>.category>.name {
    font-size: 32rpx;
    color: #464750;
}

.categories>.category>.count {
    font-size: 20rpx;
    color: #989ba8;
}

.categories>.category>.hot {
    position: absolute;
    top: 0;
    right: 0;
    width: 0;
    height: 0;
    border-color: transparent #ffd285 transparent transparent;
    border-style: solid;
    border-width: 0 44rpx 44rpx 0;
}

.categories>.category>.hot>text {
    color: #d68f2c;
    font-size: 14rpx;
    font-weight: 700;
    position: absolute;
    transform: rotate(45deg);
    top: 7rpx;
    left: 14rpx;
}

.feedback {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-pack: center;
    justify-content: center;
}

.feedback>.label {
    font-size: 24rpx;
    line-height: 64rpx;
    height: 64rpx;
    color: #7b7e8e;
    border-radius: 44rpx;
    padding: 0 32rpx;
    border: 1rpx solid #dcdde4;
}

.feedback>.label>.icomoon {
    margin-left: 10rpx;
}